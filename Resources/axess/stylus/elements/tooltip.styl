.tooltip
    display: inline-flex
    position: relative;
    top: 3px;
    cursor pointer
    z-index 9999
    span[class^="icon-"], span[class*=" icon-"]
        font-size: 18px
        &:before
            color: $primaryblue
    &:hover
        .tooltip-details
            visibility: visible
            opacity 1

.tooltip-details
    min-width: 244px;
    max-width: 365px
    padding: 16px;
    border-radius: 8px;
    background-color: rgba(74, 73, 75, 0.95);
    position: absolute
    bottom: 7px
    display: flex
    align-items: center
    justify-content: center;
    font-size: 12px;
    font-weight: normal;
    font-stretch: normal;
    font-style: normal;
    line-height: 1.33;
    letter-spacing: normal;
    color: $white;
    transition: all ease 0.3s
    visibility: hidden
    opacity 0
    text-align: left
    transform: translate(-46.66%, -22px);
    z-index: 9999;
    &:after
        content: ''
        width: 0;
        height: 0;
        border-style: solid;
        border-width: 10px 7.5px 0 7.5px;
        border-color: rgba(74, 73, 75, 0.95) transparent transparent transparent;
        position: absolute
        bottom: -9px