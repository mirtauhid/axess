.accordion
    margin: 40px auto 40px;
    width: 100%
    dt
        font-size: 17px;
        font-weight: 500;
        font-stretch: normal;
        font-style: normal;
        line-height: 1.41;
        letter-spacing: normal;
        color: $black;
        margin-bottom: 40px
        cursor pointer
        padding-left: 30px
        position: relative
        &:before
            content: "\e924";
            font-family: 'icomoon' !important;
            speak: never;
            font-style: normal;
            font-weight: normal;
            font-variant: normal;
            text-transform: none;
            line-height: 1;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
            font-size: 16px
            color: #2e7a9a
            position: absolute;
            left: 0
            top: 3px
        &.active
            &:before
                content: "\e925";
    dd
        padding-bottom: 40px
        font-size: 16px;
        font-weight: normal;
        font-stretch: normal;
        font-style: normal;
        line-height: 1.5;
        letter-spacing: normal;
        color: $darkgrey;
        display: none
        margin-top: -20px
        p
            margin-bottom: 20px
            padding-left: 30px
            &:last-child
                margin-bottom: 0

h2 + .accordion, h3 + .accordion, .accordion:first-child
    margin: 0 auto

.accordion-box
    margin: 0 auto;
    width: 100%
    border: solid 1px #e2e2e2;
    padding: 0 16px
    dt
        font-size: 17px;
        font-weight: 500;
        font-stretch: normal;
        font-style: normal;
        line-height: 1.41;
        letter-spacing: normal;
        color:$black;
        cursor pointer
        padding-left: 30px
        position: relative
        padding: 19px 30px 12px
        border-top: solid 1px #e2e2e2;
        &:first-child
            border-top: 0
        &:before
            content: "\e924";
            font-family: 'icomoon' !important;
            speak: never;
            font-style: normal;
            font-weight: normal;
            font-variant: normal;
            text-transform: none;
            line-height: 1;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
            font-size: 16px
            color: #2e7a9a
            position: absolute;
            left: 0
            top: 22px
        &.active
            &:before
                content: "\e925";
    dd
        font-size: 16px;
        font-weight: normal;
        font-stretch: normal;
        font-style: normal;
        line-height: 1.5;
        letter-spacing: normal;
        color: $darkgrey;
        display: none
        p
            margin-bottom: 20px
            padding-left: 30px
            &:last-child
                margin-bottom: 0