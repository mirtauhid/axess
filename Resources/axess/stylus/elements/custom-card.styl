.custom-card-container
    width: 344px;
    height: 218px;
    position relative

    .chip
        width: 40px
        height: 33px
        background: url("../img/custom-card/chip.png") center center no-repeat;
        position: absolute
        top: 24px
        left: 32px

    .card-number
        width: 100%;
        padding: 0 33px
        position: absolute;
        display: flex;
        justify-content: space-between;
        top: 90px
        left: 0
        span
            font-size: 18px;
            font-weight: 500;
            font-stretch: normal;
            font-style: normal;
            line-height: 1.06;
            letter-spacing: 4.64px;
            color: #565b6d;

    .card-end-date
        display: flex;
        align-items: center
        justify-content: center
        position: absolute;
        left: 99px
        top: 133px
        h6
            font-size: 8px;
            font-weight: normal;
            font-stretch: normal;
            font-style: normal;
            line-height: normal;
            letter-spacing: normal;
            color: #888888;
            margin-right: 14px
        span
            font-size: 14px;
            font-weight: normal;
            font-stretch: normal;
            font-style: normal;
            line-height: normal;
            letter-spacing: normal;
            color: #565b6d;
    
    .card-holder-name
        width: 100%;
        position: absolute;
        padding-left: 32px
        bottom: 37px
        padding-right: 84px
        font-size: 14px;
        font-weight: normal;
        font-stretch: normal;
        font-style: normal;
        line-height: normal;
        letter-spacing: -0.2px;
        color: #565b6d;

    .card-type
        position: absolute;
        right: 34px
        bottom: 34px