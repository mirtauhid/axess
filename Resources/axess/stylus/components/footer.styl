#footer
    background: $white
    box-shadow: inset 0 1px 0 0 #dbdddf;
    
.footer-menu
    display: flex
    border-bottom: solid 1px #f0f1f1;
    padding: 40px 0 0 0;
    margin-bottom: 40px
    flex-direction: column
    +media-lg()
        flex-direction: row
        padding: 80px 0 46px 0;
        margin-bottom: 46px

.footer-menu-item
    margin-bottom: 24px
    +media-lg()
        margin-bottom: 0
        flex: 1
    h4
        +media-lg()
            margin-bottom: 8px
        a
            font-family: 'Bebas Neue';
            font-size: 24px;
            font-weight: bold;
            font-stretch: normal;
            font-style: normal;
            line-height: normal;
            letter-spacing: normal;
            color: #222327;
            display: flex
            align-items: center
            justify-content: flex-start
            +media-lg()
                font-size: 20px
            span
                font-size: 14px
                display: block
                margin-left: 16px
                position relative
                top: -2px
                &.icon-arti
                    display: block
                    +media-lg()
                        display: none
                &.icon-sour
                    display: none
                    +media-lg()
                        display: none
    &.active
        h4
            a
                span.icon-arti
                    display: none
                    +media-lg()
                        display: none
                span.icon-sour
                    display: block
                    +media-lg()
                        display: none
        ul
            display: block
    ul
        display: none;
        +media-lg()
            display: block !important
        li
            a
                font-size: 16px;
                font-weight: normal;
                font-stretch: normal;
                font-style: normal;
                line-height: 2.38;
                letter-spacing: -0.5px;
                color: $darkgrey;
                display: block


.footer-contact
    display: flex
    justify-content: space-between
    padding-bottom: 40px
    border-bottom: solid 1px #f0f1f1;
    flex-direction: column;
    +media-lg()
        flex-direction: row
        padding-bottom: 50px
    h4
        font-family: 'Bebas Neue';
        font-size: 20px;
        font-weight: bold;
        font-stretch: normal;
        font-style: normal;
        line-height: normal;
        letter-spacing: normal;
        color: #222327;
        margin-bottom: 12px
        text-align: center
        +media-lg()
            text-align: left
        br
            +media-lg()
                display: none

.footer-social-media
    display: flex
    align-items: center
    flex-direction: column
    margin-bottom: 48px
    +media-lg()
        align-items: flex-start
        margin-bottom: 0
    ul
        display: flex
        li
            margin-right: 20px
            &:last-child
                margin-right: 0
            a
                display: block
                box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2);
                border-radius: 50px
                width: 50px
                height: 50px
                img
                    width: 50px
                    height: 50px

.newsletter
    display: flex
    .btn
        max-width: 180px
    form
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 100%;
        +media-lg()
            flex-direction: row
    .newsletter__input
        position relative
        margin-bottom: 32px
        +media-lg()
            margin-right: 20px
            margin-bottom: 0
    input
        width: 250px
        height: 50px;
        padding: 14px 50px 13px 20px;
        border-radius: 2px;
        border: solid 1px #e2e2e2;
        background-color: $white;
        font-size: 16px;
        font-weight: normal;
        font-stretch: normal;
        font-style: normal;
        line-height: normal;
        letter-spacing: normal;
        color: #222327
        &:focus
            border: solid 1px $primaryblue
        &::placeholder 
            color: #7f7f7f;
        &.error
            border: solid 1px $red
        &.error + .icon-warning
            display: block
        &.error + .icon-warning + .newsletter__error-message
            display: block
    .newsletter__error-message
        display: none
        font-size: 11px;
        font-weight: 500;
        font-stretch: normal;
        font-style: normal;
        line-height: 1.09;
        letter-spacing: 0.25px;
        color: $red;
        position: absolute
        left: 12px
        bottom: -16px  
    .icon-warning
        font-size: 16px;
        display: none
        position: absolute
        right: 16px
        top: 16px
        .path1:before
            color: $red;
    
.footer-bottom-menu
    padding: 24px 0 0 0
    display: flex;
    justify-content: space-between
    flex-direction: column
    +media-lg()
        flex-direction: row-reverse
        padding: 12px 0 26px 0

    ul
        +media-lg()
            display: flex
        li
            padding-right: 8px
            margin-right: 8px
            border-right: 1px solid $darkgrey
            display: inline-block
            margin-bottom: 24px
            +media-lg()
                margin-bottom: 0
            &:last-child
                border: 0 none;
                padding: 0
                +media-lg()
                    margin: 0;
            a
                display: block
                font-size: 14px;
                font-weight: normal;
                font-stretch: normal;
                font-style: normal;
                line-height: normal;
                letter-spacing: normal;
                color: $darkgrey;

.copyright
    font-size: 14px;
    font-weight: normal;
    font-stretch: normal;
    font-style: normal;
    line-height: normal;
    letter-spacing: normal;
    color: $darkgrey;
    margin: 0 -15px;
    border-top: 1px solid #f0f1f1;
    padding-top: 24px
    padding-bottom: 24px
    text-align: center
    +media-lg()
        margin: 0
        padding: 0
        border: 0 none
        text-align: left
