.mil-point-container, .subpage-secondary-blog-content .mil-point-container
    width: 100%;
    height: 260px;
    border-radius: 2px;
    box-shadow: 0 4px 13px 0 rgba(30, 132, 174, 0.2);
    background-color: #00aad2;
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center
    position relative
    margin-bottom: 32px;
    padding: 20px;
    text-align: center;
    +media-lg()
        margin-bottom: 60px
        text-align: left
        padding: 0
    *
        position relative
        z-index 1
    &:after
        content: ''
        width: 0;
        height: 0;
        border-style: solid;
        border-width: 0 0 170px 653px;
        border-color: transparent transparent #02a4cb transparent;
        right: 0
        bottom: 0
        position: absolute
        z-index 0
        display: none
        +media-lg()
            display: block
    h3
        font-size: 36px;
        font-weight: bold;
        font-stretch: normal;
        font-style: normal;
        line-height: normal;
        letter-spacing: normal;
        color: $white;
        font-family: 'Bebas Neue';
        margin-bottom: 6px
    

.mil-point
    font-size: 42px;
    font-weight: 200;
    font-stretch: normal;
    font-style: normal;
    line-height: 1.33;
    letter-spacing: normal;
    text-align: center;
    color: $white;
    margin-bottom: 14px

.subpage-secondary-blog-content
    .mil-point-container
        margin-top: -20px