.campaign-banner-container
    width: 100%
    text-align: center
    display: flex
    align-items: center
    justify-content: center
    position relative
    background: $white
    display: none
    +media-lg()
        display: block
    img
        max-width: 100%

.campaign-banner
    @extend .container
    position: absolute
    top: 0
    height: 100%
    text-align: left
    display: flex
    flex-direction: column
    align-items: flex-start
    justify-content: center
    h3
        font-size: 56px;
        font-weight: bold;
        font-stretch: normal;
        font-style: normal;
        line-height: normal;
        letter-spacing: normal;
        color: $white;
        font-family: 'Bebas Neue';
        margin-bottom: 24px