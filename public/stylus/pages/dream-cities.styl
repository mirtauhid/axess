.dream-cities
    background: url('../img/sehirler-banner-2.png') center bottom no-repeat;
    background-size: cover;
    height: auto
    margin: 0 0 30px 0
    overflow: inherit
    +media-md()
        height: 530px
        background: url('../img/sehirler-banner.png') center bottom no-repeat;
    &:after
        display: none
    .hero-area-banner
        +media-max-md()
            flex-direction: column
            justify-content: center
            align-items: center
    .hero-area-banner-content 
        p
            +media-max-md()
                margin-bottom: 0

.dream-cities-with-timer
    background: url('../img/sehirler-banner-2.png') center bottom no-repeat;
    background-size: cover;
    height: auto
    margin: 0 0 30px 0
    overflow: inherit
    +media-md()
        height: 530px
    &:after
        display: none

    .hero-area-banner
        flex-direction: column
        justify-content: flex-start

.dream-cities-timer
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    +media-md()
        padding-top: 66px
    ul
        display: flex
    

.dream-cities-timer-item
    background: rgba(255, 255, 255, 0.26)
    border-radius: 10px;
    display: flex;
    align-items: center
    justify-content: center
    font-weight: bold;
    font-stretch: normal;
    font-style: normal;
    line-height: normal;
    letter-spacing: normal;
    color: $white;
    width: 48px;
    height: 48px;
    margin-bottom: 4px;
    font-size: 24px;
    +media-md()
        width: 96px
        height: 96px
        margin-bottom: 24px
        font-size: 60px;


.dream-cities-timer-seperator
    display: flex;
    align-items: center
    justify-content: center
    width: 22px
    height: 48px;
    font-size: 24px;
    font-weight: bold;
    font-stretch: normal;
    font-style: normal;
    line-height: normal;
    letter-spacing: normal;
    color: $white;
    +media-md()
        height: 96px
        width: 41px
        font-size: 36px;

.dream-cities-timer-text
    font-size: 14px;
    font-weight: normal;
    font-stretch: normal;
    font-style: normal;
    line-height: normal;
    letter-spacing: normal;
    color: $white;
    text-align: center
    +media-lg()
        font-size: 18px